<%= content_tag :div, class: "status clearfix" do%>
  <%= content_tag :div, class: "content" do %>
    <%= content_tag :h4 do %>
      <%= link_to current_status.user.full_name, current_status.user %>
    <% end %>
    <%= content_tag :p do %>
      <%= current_status.content %>
    <% end %>
    
    <%= "#{pluralize(current_status.likes_count, 'like')} in #{time_ago_in_words(current_status.updated_at)}" %>
    <% if current_status.belongs_to? current_user %>
      <%= render "comments/edit_and_delete", current_comment: current_status %>
    <% else %>
      |
      <%= render "likes/like_or_dislike", likeable: current_status %>
    <% end %>

    <%= render "comments/inline_form", content: current_status.comments.new, type: :comment%>
  <% end %>

  <%= content_tag :div, class: "comment-list" do %>
    <% current_status.comments.each do |c| %>
      <% if c.belongs_to? current_user %>
        <%= render "comments/owned_comment", current_comment: c %>
      <% else %>
        <%= render "comments/comment", current_comment: c if c.persisted?%>
      <% end %>
    <% end %>
  <% end %>
<% end %>