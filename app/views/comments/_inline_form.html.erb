<% remote ||= nil %>
<% placeholder = (type == :status) ? "What's on your mind?" : "Comment..."%>
<% form_options = {
  current_comment: content, 
  placeholder: placeholder, 
  } %>
<% form_options[:remote] = remote %>

<% form_options.delete_if {|k,v| !v} %>

<%= content_tag :div, class: "inline-#{type}-form" do %>
  <%= render 'comments/form', form_options %>
<% end %>