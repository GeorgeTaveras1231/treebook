<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input_field :email, :autofocus => true, label: false, placeholder: "e-mail" %>
  <br>
  <%= f.input_field :first_name, label: false, placeholder: "First name" %>
  <%= f.input_field :last_name, label: false, placeholder: "Last name" %>
  <br>
  <%= f.input_field :password, label: false, placeholder: "Password" %>
  <br>
  <%= f.input_field :password_confirmation, label: false, placeholder: "Password confirmation" %>
  <br>
  <%= f.button :submit, "Sign up" %>
<% end %>

<%= render "devise/shared/links" %>
