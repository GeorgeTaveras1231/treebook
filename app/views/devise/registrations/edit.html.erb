<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :email, :autofocus => true, label: false, placeholder: "Your email" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.input :password, :autocomplete => "off", label: false, placeholder: "Password" %><i>(leave blank if you don't want to change it)</i>

  <%= f.input :password_confirmation, label: false, placeholder: "Password confirmation" %>

  <i>(we need your current password to confirm your changes)</i>
  <%= f.input :current_password, label: false, placeholder: "Current password" %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.button :submit, "Update" %>
<% end %>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { confirm: "All of your information will be lost. Are you sure?" }, :method => :delete, class: "btn btn-danger" %></p>


<%= link_to "Back", :back %>
