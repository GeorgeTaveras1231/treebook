<div class="navbar navbar-fixed-top">
  <div class="container">
  	<div class="navbar-inner">

  	<%= link_to "Treebook", root_path, class: "brand" %>
  		<ul class="nav">
        <li class="divider-vertical"></li>
        <% if current_user %>
    			<%= nav_button "Another link", "#" %>
        <% end %>
  		</ul>
      <ul class="nav pull-right">
        <% if current_user %>
          <%= nav_button content_tag(:i, "", class: "icon-home"), statuses_path %>
          <%= nav_button content_tag(:i,"",class: "icon-user" ) , current_user do |u|%>
            <%= menu_button "Profile", u %>
            <%= menu_button "Settings", edit_user_registration_path %>
            <%= divider :li %>
            <%= menu_button "Sign out", destroy_user_session_path, link: { method: "delete" } %>
          <% end %>
        <% else %>
          <%= nav_button "Sign up", new_user_registration_path %>
          <%= nav_button "Log in", new_user_session_path %>
        <% end %>
        
      </ul>
  	</div>
  </div>
</div>