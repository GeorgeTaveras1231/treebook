<%= content_tag :div, class: "status clearfix" do%>
	<%= content_tag :h4 do %>
    <%= link_to to.user.email, to.user %>
  <% end %>
  <%= content_tag :p do %>
    <%= to.content %>
  <% end %>
  <%= "#{pluralize(to.likes_count, 'like')} in #{time_ago_in_words(to.updated_at)}" %>
  <% if to.belongs_to? current_user %>
    <%= render "statuses/edit_and_delete", to: to %>
  <% else %>
    |
    <%= render "likes/like_or_dislike", to: to %>
  <% end %>
<% end %>

